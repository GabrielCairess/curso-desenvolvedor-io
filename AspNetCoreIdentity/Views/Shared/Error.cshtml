@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Ocorreu um erro!" : Model.Titulo;
}

@{
    if (Model == null)
    {
        <div>
            <h2>OOPSS!! Ocorreu um erro</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h1 class="text-danger">@Html.Raw(Model.Mensagem)</h1>
    }
}